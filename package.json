{
    "name": "bobinette",
    "version": "1.0.0",
    "description": "Raspberry Pi Facial Recognition Access Control System",
    "scripts": {
        "start": "npm run client | npm run server",
        "client": "npm start --prefix client",
        "server": "npm start --prefix server",
        "clear": "rm -f server/*.xml && rm -f server/database/*.sqlite3 && sudo rm -f -r static/*",
        "install": "sudo bash ./install.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WebMaestroFr/bobinette.git"
    },
    "author": "etienne@webmaestro.fr",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/WebMaestroFr/bobinette/issues"
    },
    "homepage": "https://github.com/WebMaestroFr/bobinette#readme",
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "parserOptions": {
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true,
                "experimentalObjectRestSpread": true
            }
        }
    }
}